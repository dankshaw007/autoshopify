{
    "name": "Python 3 & Chrome with ChromeDriver",
    "image": "mcr.microsoft.com/devcontainers/python:0-3.10",
    "features": {
        // Feature to install Google Chrome and the compatible ChromeDriver
        // This will handle putting chromedriver in your PATH automatically
        "ghcr.io/devcontainers/features/chrome:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "postCreateCommand": "pip install -r requirements.txt || true",
    "forwardPorts": [],
    "portsAttributes": {
        "8000": {
            "label": "Application",
            "onAutoForward": "notify"
        }
    },
    "remoteUser": "codespace"
}
